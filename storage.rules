rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for all project-related assets (images and videos)
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true;
      
      allow create, update: if 
        // Images: max 5MB
        (request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('image/.*')) ||
        // Videos: max 50MB
        (request.resource.size < 50 * 1024 * 1024 && request.resource.contentType.matches('video/.*'));
        
      allow delete: if true;
    }
    
    // Add permission for cover images
    match /covers/{imageId} {
      allow read: if true;
      allow create, update: if request.resource.size < 5 * 1024 * 1024
                            && request.resource.contentType.matches('image/.*');
      allow delete: if true;
    }
  }
}
