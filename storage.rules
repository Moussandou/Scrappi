rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for all project-related assets (images and videos)
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true;
      
      allow create, update: if 
        request.auth != null &&
        firestore.get(/databases/(default)/documents/scrapbooks/$(projectId)).data.userId == request.auth.uid &&
        (
          // Images: max 5MB
          (request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('image/.*')) ||
          // Videos: max 50MB
          (request.resource.size < 50 * 1024 * 1024 && request.resource.contentType.matches('video/.*'))
        );
        
      allow delete: if request.auth != null &&
        firestore.get(/databases/(default)/documents/scrapbooks/$(projectId)).data.userId == request.auth.uid;
    }
    
    // User-specific covers
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId &&
        (
          // Images: max 5MB
          (request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('image/.*')) ||
          // Videos: max 50MB
          (request.resource.size < 50 * 1024 * 1024 && request.resource.contentType.matches('video/.*'))
        );
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Legacy covers (read-only)
    match /covers/{imageId} {
      allow read: if true;
    }
  }
}
