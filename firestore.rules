rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /scrapbooks/{document} {
      // Allow public read for MVP
      allow read: if true;
      // Basic spam prevention: only allow creation if the title is relatively short
      allow create, update: if request.resource.data.title.size() > 0 
                            && request.resource.data.title.size() < 100;
      allow delete: if true;
    }
    
    match /elements/{document} {
      // Allow public read for MVP
      allow read: if true;
      // Allow writes to elements
      allow write: if true;
    }
  }
}
