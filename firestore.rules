rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    match /scrapbooks/{id} {
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isOwner(resource.data.userId)
                    && request.resource.data.title.size() < 100;
      allow delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());

      match /elements/{elementId} {
        allow read: if isSignedIn() && (
          get(/databases/$(database)/documents/scrapbooks/$(id)).data.userId == request.auth.uid 
          || isAdmin()
        );
        allow write: if isSignedIn() && (
          get(/databases/$(database)/documents/scrapbooks/$(id)).data.userId == request.auth.uid
        );
      }
    }

    match /elements/{id} {
      // Legacy elements document (ID is scrapbook ID)
      allow read: if isSignedIn() && (
        get(/databases/$(database)/documents/scrapbooks/$(id)).data.userId == request.auth.uid
        || isAdmin()
      );
      allow write: if isSignedIn() && (
        get(/databases/$(database)/documents/scrapbooks/$(id)).data.userId == request.auth.uid
      );
    }

    // User profiles
    match /users/{uid} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow write: if isSignedIn() && request.auth.uid == uid;
    }

    // App config (maintenance mode, etc.)
    match /config/{docId} {
      allow read: if true;
      allow write: if isSignedIn() && isAdmin();
    }
  }
}
